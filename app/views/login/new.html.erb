<%= render "shared/navbar" %>

<div class="container-fluid d-flex justify-content-center align-items-center" style="margin-top: 12rem;">
  <div class="card w-50 p-2">
    <h1>Login</h1>
    <%= form_with url: login_index_path do |form| %>
      <div class="form-group mb-3">
         <%= form.label :email, class: "fw-semibold" %>
         <%= form.email_field :email, class: "form-control" %>
       </div>

        <div class="form-group mb-3">
          <%= form.label :password, class: "fw-semibold" %>
          <%= form.password_field :password, class: "form-control" %>
        </div>

        <%= form.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>