<div class="container d-flex align-items-center" style="height: 100vh;">
  <div class="container-sm w-50 border border-3 rounded p-2">
    <h1 class="text-center">Register account here</h1>
    <%= form_with(model: @user, url: sign_up_index_path, class: "form") do |form| %>
      <div class="form-group mb-3">
        <%= form.label :firstname, class: "fw-semibold" %>
        <%= form.text_field :firstname, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :lastname, class: "fw-semibold" %>
        <%= form.text_field :lastname, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :email, class: "fw-semibold" %>
        <%= form.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :password, class: "fw-semibold" %>
        <%= form.password_field :password, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :password_confirmation, class: "fw-semibold" %>
        <%= form.password_field :password_confirmation, class: "form-control" %>
      </div>

      <div class="form-group mb-3">
        <%= form.label :status, class: "fw-semibold" %> </br>
        <%= form.radio_button :status, "Learner" %> Learn
        <%= form.radio_button :status, "Educator" %> Educate
      </div>

      <%= form.submit "Submit", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>